{
  "name": "moleculer-cli",
  "version": "0.8.1",
  "description": ":herb: Command line tool for Moleculer",
  "scripts": {
    "dev": "node ./bin/moleculer",
    "deps": "npm-check -u",
    "lint": "eslint src/**/*.js -c .eslintrc.js",
    "dev:init": "node ./bin/moleculer init project tmp",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --detectOpenHandles --forceExit"
  },
  "bin": {
    "moleculer": "./bin/moleculer.js"
  },
  "keywords": [
    "cli",
    "moleculer",
    "microservices"
  ],
  "author": "MoleculerJS",
  "license": "MIT",
  "dependencies": {
    "async": "^3.2.4",
    "consolidate": "^1.0.1",
    "download-git-repo": "^3.0.2",
    "exeq": "^3.0.0",
    "glob": "^10.3.0",
    "handlebars": "^4.7.7",
    "inquirer": "^9.2.7",
    "kleur": "^4.1.5",
    "lodash": "^4.17.21",
    "metalsmith": "^2.6.0",
    "minimatch": "^9.0.1",
    "mkdirp": "^3.0.1",
    "moleculer": "^0.14.29",
    "moleculer-repl": "^0.7.3",
    "multimatch": "^6.0.0",
    "nats": "^2.15.0",
    "rimraf": "^5.0.1",
    "update-notifier": "^6.0.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "eslint": "^8.43.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "npm-check": "^6.0.1",
    "yargs-promise": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moleculerjs/moleculer-cli.git"
  },
  "bugs": {
    "url": "https://github.com/moleculerjs/moleculer-cli/issues"
  },
  "homepage": "https://github.com/moleculerjs/moleculer-cli#readme"
}
